{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Total Vaccinations",
    "width": 800,
    "height": 600,
    "data": {
      "url": "world.geo.json",
      "format": {"type": "topojson", "feature": "world.geo"}
    },
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "country_vaccinations.csv"
          },
          "key": "country",
          "fields": ["total_vaccinations"]
        }
      },
      {"calculate": "datum.total_vaccinations + 0", "as": "Total Vaccinations"}
    ],
    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Total Vaccinations",
        "type": "quantitative",
        "scale": {"type": "log"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "Country"},
        {"field": "Vaccinations", "type": "quantitative"}
      ]
    }
  }
